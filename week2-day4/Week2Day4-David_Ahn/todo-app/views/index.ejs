
<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width">
  <title>To Do App</title>
  <link href="style.css" rel="stylesheet" type="text/css" />
</head>

<body>

    <div class="container">
  <h1> ToDo App</h1>
  <form action ="/" method="POST">
      <input type="text" name="newTask" placeholder="Go to work" autocomplete="off">    <button type="'submit"> Save </button>
  </form>
  <table>
    <thead> 
      <tr>
      <th>No.</th>
      <th>Todo Item</th>
      <th>status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% data.getListToDo.forEach(toDo=>{ %>
      <tr id=`${Todo.id}`>
        <td><%= data.getListToDo.indexOf(toDo) %></td>
        <td><%= toDo.title %></td>
        <td><%= toDo.status %></td>
        <td>
          <form action ="/delete" method="post">
            <button type="submit">Delete</button>
          </form>
        </td>
        <td> <form action ="/update" method="update">
          <button type="submit">Finished</button>
        </form></td>
      </tr>
   <%}) %>
  </tbody>
  </table>
  </div>

  


  <script src="script.js"></script>
</body>

</html>






